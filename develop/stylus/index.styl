*
	margin 0
	padding 0
	line-height 1
	font-family Helvetica,STHeiti,Droid Sans Fallback
a
	text-decoration none
	color inherit
ul
ol
li
	list-style none
em
i
	font-style normal
body
	background-color #FAFAFA
header
	position relative
	width 100%
	height 2.5rem
	background url(../image/headerbg.png) 7.5rem 0 no-repeat
	background-size 10rem 2.5rem
	border-bottom 2px solid #317ecb
	.logo
		display inline-block
		width 7.5rem
		height 2rem
		background url(../image/logo_sports.png) no-repeat
		background-size 100% 100%
		margin-top 0.3rem
		margin-left 0.5rem
	.down
		float right
		display block
		margin 0.875rem 0.875rem 0 0
		width 1.375rem
		height 1rem
		background url(../image/icon.png) -1.25rem 0 no-repeat
		background-size 7.4375rem 1.3125rem
.nav-ul
	width 100%
	background-color #4998e7
	padding 0.3125rem
	display none
	ul
		overflow hidden
		li
			width 20%
			display inline-block
			text-align center
			line-height 1.875rem
			font-size 1.125rem
			float left
			color #FAFAFA
.show 
	display block
.nav
	width 100%
	background #3e86ce
	padding 5px 0
	ul
		overflow hidden
		.nav-li
			width 20%
			line-height 1.875rem
			font-size 1.125rem
			text-align center
			float left
			color #FAFAFA
		.current
			background-color #226fbb
.main-pic
	width 100%
	overflow hidden
	a
		position relative
		display block
		height 10.3125rem
		width 100%
		img
			width 100%
		.tit
			height 2rem
			line-height 2rem
			padding 0 2.25rem 0 0
			color #fafafa
			position absolute
			left 0
			bottom 0
			right 0
			text-align center
			text-shadow 1px 1px 1px #000
			background -webkit-linear-gradient(top,rgba(0,0,0,0),rgba(0,0,0,.9))
.news-list
	padding 0 0.5rem
	li
		overflow hidden
		border-bottom 1px solid #eceef0
		box-shadow 0 1px 1px #fff
	.cComm
		margin-left 0.375rem
		&:before
			content ""
			vertical-align middle
			display inline-block
			background-image url(../image/icon.png)
			background-repeat no-repeat
			background-size 7.4375rem 1.3125rem
			width 0.625rem
			height 0.625rem
			background-position -5.25rem 0
			margin-right 0.1875rem
	.pic-text
		padding 0.625rem 0
		.thumb
			width 4.6875rem
			height 3.4375rem
			line-height 3.1875rem
			padding 0.0625rem
			background #e9f1f4
			border 1px solid #e0e0e0
			float left
			text-align center
			img
				height 100%
				width 90%
				margin 0 auto
				vertical-align middle
		h2
			font-weight 400
			text-overflow ellipsis
			white-space nowrap
			height 1.375rem
			line-height @height
			overflow hidden
			font-size 0.9375em
			padding-left 0.3125rem
			margin-bottom 0.25rem
		p
			word-wrap break-word
			color #878c92
			font-size 0.8125em
			padding 0 0 0 0.315rem
			line-height 1.0625rem
			overflow hidden
			.count
				height 1.0625rem
				line-height 1.0625rem
				display inline-block
				text-align right
				float right
				i
					font-size 0.6875rem
					color #878c92
					display inline-block
					vertical-align middle
				.flag
					margin-right 0.25rem
					width 1.5rem
					height 0.875rem
					background-image url(http://mat1.gtimg.com/www/mobi/image/flagicon.png)
					background-repeat no-repeat
					background-size 10.5rem 0.875rem
					display none
				.flag4
					display inline-block
					background-position -4.5rem 0
	.pic-pic
		padding-bottom 5/16rem
		h2
			white-space nowrap
			text-overflow ellipsis
			height 2.1875rem
			line-height 2.1875rem
			font-size 0.9375rem
			font-weight 400
			overflow hidden
		.thumb
			width 100%
			text-align center
			background #e9f1f
			img
				width 100%
				height @width
				vertical-align: middle
		p
			display block
			padding 0.3125rem 0 0
			line-height 1.0625rem
			font-size 0.8125em
			overflow hidden
			color #878c92
			word-wrap break-word
		.count
			height 1.0625rem
			line-height 1.0625rem
			display inline-block
			text-align right
			float right
.more
	height 2.0625rem
	line-height @height
	margin 0 0.5rem 0.9735rem
	border 1px solid #efefef
	background-color #f6f5f5
	text-align center
	color #b4b4b4
	.more-c
		color #b4b4b4
		&:after
			content ""
			display inline-block
			width 1.3125rem
			height 1.3125rem
			vertical-align -0.3125rem
			margin-left 0.3125rem
			background-position -2.625rem 0
			background-image url(../image/icon.png)
			background-repeat no-repeat
			background-size 7.4375rem 1.3125rem
.footernav
	width 100%
	background-color #49535d
	padding 0.75rem 0
	overflow hidden
	ul
		li
			float left
			width 20%
			height 1.75rem
			line-height: 1.75rem
			font-size 0.9375rem	
			color #95a0ac
			text-align center
footer
	padding 0.625rem 2.8125rem 0.75rem 0
	overflow hidden
	position relative
	background-color #404a54
	.user
		color #95a0ac
		font-size 0.8125rem
		line-height 1.5625rem
		padding 0 0.5rem
	.link
		height 1.5625rem
		line-height 1.5625rem
		color #565e61
		font-size 0.8125rem
		text-align left
		a
			color #95a0ac
			margin 0 0 0 0.5rem
			display inline-block
			float left
	.copyright
		font-size 0.5em
		color #707982
		text-align left
		text-indent 0.5rem
		white-space nowrap
		text-overflow ellipsis
	.go-top
		width 2.5rem
		height 2.25rem
		position absolute
		background #313a43
		right 0.75rem
		top 0.625rem
		&:after
			content ""
			vertical-align middle
			display inline-block
			background-image url(../image/icon.png)
			background-repeat no-repeat
			background-size 7.4375rem 1.3125rem
			width 1.5625rem
			height 1.5625rem
			background-position -5.9735rem 0
			margin-left 0.625rem 
			margin-top 0.625rem 
.hid
	display none 